{
    "name": "describe-music-cloud-functions",
    "version": "1.0.0",
    "description": "Cloud functions for Describe Music - AI-powered audio analysis platform",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "deploy:analyze": "firebase deploy --only functions:analyzeAudio",
        "logs": "firebase functions:log",
        "test": "node test-emulator.js",
        "test:emulator": "npm run serve & sleep 15 && npm run test && pkill -f 'firebase emulators'",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix"
    },
    "engines": {
        "node": "20"
    },
    "dependencies": {
        "@google-cloud/functions-framework": "^3.3.0",
        "@google/generative-ai": "^0.1.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "ffprobe-static": "^3.1.0",
        "firebase-admin": "^11.11.1",
        "firebase-functions": "^6.4.0",
        "get-audio-duration": "^4.0.1",
        "mp3-duration": "^1.1.0",
        "multer": "^1.4.5-lts.1",
        "node-fetch": "^3.3.2",
        "node-id3": "^0.2.9",
        "sharp": "^0.32.6"
    },
    "devDependencies": {
        "@types/cors": "^2.8.15",
        "@types/express": "^4.17.21",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.8.7",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^6.9.1",
        "@typescript-eslint/parser": "^6.9.1",
        "eslint": "^8.53.0",
        "firebase-functions-test": "^3.1.1",
        "jest": "^29.7.0",
        "typescript": "^5.2.2"
    },
    "private": true,
    "keywords": [
        "firebase",
        "cloud-functions",
        "audio-analysis",
        "ai",
        "gemini",
        "music"
    ],
    "author": "Describe Music Team",
    "license": "MIT"
}
