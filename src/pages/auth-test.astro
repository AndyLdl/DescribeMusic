---
// 认证功能测试页面
import Layout from "../layouts/Layout.astro";
---

<Layout title="认证功能测试 - Describe Music">
  <main
    class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    <div id="auth-test-root"></div>
  </main>
</Layout>

<script>
  import { AuthProvider } from "../contexts/AuthContext";
  import AuthTest from "../components/auth/AuthTest";
  import React from "react";
  import { createRoot } from "react-dom/client";

  const App = () => {
    return React.createElement(
      AuthProvider,
      null,
      React.createElement(AuthTest),
    );
  };

  const container = document.getElementById("auth-test-root");
  if (container) {
    const root = createRoot(container);
    root.render(React.createElement(App));
  }
</script>
