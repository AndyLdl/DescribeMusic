---
import { Icon } from "astro-icon/components";
---

<div
  id="hero-section"
  class="relative h-screen flex items-center justify-center overflow-hidden bg-dark-bg -mt-20">
  <canvas id="living-nebula-canvas" class="absolute inset-0 w-full h-full"
  ></canvas>

  <div class="relative text-center z-10 p-6">
    <div id="hero-content">
      <!-- Launch Special Banner -->
      <div class="mb-6">
        <div
          class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-orange-500/20 to-red-500/20 border border-orange-500/30 rounded-full backdrop-blur-xl">
          <Icon
            name="heroicons:fire-20-solid"
            class="w-4 h-4 text-orange-400 animate-pulse"
          />
          <span class="text-sm font-medium text-orange-300"
            >ðŸš€ Launch Special - Everything Free During Beta</span
          >
          <Icon
            name="heroicons:fire-20-solid"
            class="w-4 h-4 text-orange-400 animate-pulse"
          />
        </div>
      </div>

      <h1
        class="text-5xl md:text-8xl font-bold tracking-tighter !leading-tight text-white/90">
        Describe Music.
      </h1>
      <p class="mt-4 text-xl md:text-2xl text-slate-300/80">
        AI-Powered Audio Analysis.
      </p>

      <div
        class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/analyze/"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 text-lg font-medium text-white bg-gradient-to-r from-violet-500 to-blue-500 rounded-full hover:from-violet-600 hover:to-blue-600 transition-all duration-300 shadow-lg hover:shadow-xl hover:shadow-violet-500/25 group">
          Start Free Analysis Now
          <Icon
            name="heroicons:arrow-right-20-solid"
            class="w-5 h-5 transition-transform group-hover:translate-x-1"
          />
        </a>
      </div>

      <!-- Badges Section -->
      <div class="mt-6 flex items-center justify-center gap-4 flex-wrap">
        <a
          href="https://startupfa.me/s/describe-music?utm_source=www.describemusic.net"
          target="_blank"
          class="group inline-block">
          <img
            src="https://startupfa.me/badges/featured-badge.webp"
            alt="Featured on Startup Fame"
            width="171"
            height="54"
            class="h-10 w-auto opacity-60 hover:opacity-90 transition-opacity duration-300 filter drop-shadow-lg"
          />
        </a>
        <a href="https://dang.ai/" class="group inline-block" target="_blank"
          ><img
            src="https://cdn.prod.website-files.com/63d8afd87da01fb58ea3fbcb/6487e2868c6c8f93b4828827_dang-badge.png"
            alt="Dang.ai"
            class="h-10 w-auto opacity-60 hover:opacity-90 transition-opacity duration-300 filter drop-shadow-lg"
            width="171"
            height="54"
          /></a
        >
        <a
          href="https://tinylaunch.com"
          class="group inline-block"
          target="_blank"
          rel="noopener">
          <img
            src="https://tinylaunch.com/tinylaunch_badge_launching_soon.svg"
            alt="TinyLaunch Badge"
            class="h-10 w-auto opacity-60 hover:opacity-90 transition-opacity duration-300 filter drop-shadow-lg"
            width="171"
            height="54"
          />
        </a>
        <a
          href="https://www.toolpilot.ai/"
          class="group inline-block"
          target="_blank"
          rel="noopener">
          <img
            src="/images/badge/toolpilot_badge.png"
            alt="Toolpilot Badge"
            class="h-9 w-auto opacity-60 hover:opacity-90 transition-opacity duration-300 filter drop-shadow-lg rounded-sm"
            width="171"
            height="54"
          />
        </a>
        <a
          href="https://goodfirms.co/"
          class="group inline-block"
          target="_blank"
          rel="noopener">
          <img
            src="/images/badge/good_firms.svg"
            alt="Good Firms Badge"
            class="h-10 w-auto opacity-60 hover:opacity-90 transition-opacity duration-300 filter drop-shadow-lg"
            width="171"
            height="54"
          />
        </a>
        <a
          href="https://turbo0.com/item/describe-music"
          class="group inline-block"
          target="_blank"
          rel="noopener">
          <img
            src="https://img.turbo0.com/badge-listed-light.svg"
            alt="Listed on Turbo0"
            class="h-10 w-auto opacity-60 hover:opacity-90 transition-opacity duration-300 filter drop-shadow-lg"
            width="171"
            height="54"
          />
        </a>
        <a
          href="https://fazier.com/launches/describemusic.net"
          class="group inline-block"
          target="_blank"
          rel="noopener">
          <img
            src="https://fazier.com/api/v1//public/badges/launch_badges.svg?badge_type=featured&theme=neutral"
            alt="Fazier badge"
            class="h-10 w-auto opacity-60 hover:opacity-90 transition-opacity duration-300 filter drop-shadow-lg"
            width="250"
            height="54"
          />
        </a>
      </div>
    </div>
  </div>

  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10">
    <a href="#hook" id="scroll-down-hint" class="animate-bounce">
      <Icon
        name="heroicons:arrow-down-20-solid"
        class="w-6 h-6 text-white/50"
      />
    </a>
  </div>
</div>

<script is:inline src="/scripts/visualizer.js"></script>
